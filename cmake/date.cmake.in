cmake_minimum_required(VERSION 3.7)

project(date-download NONE)

# Details for installing Howard Hinnant's Date library
include(ExternalProject)
ExternalProject_Add(
  date
  PREFIX             ${CMAKE_BINARY_DIR}/date
  GIT_REPOSITORY     https://github.com/HowardHinnant/date.git
  GIT_TAG            v3.0.1
  SOURCE_DIR         "${CMAKE_CURRENT_BINARY_DIR}/date-src"
  BINARY_DIR         ""
  CONFIGURE_COMMAND  ""
  BUILD_COMMAND      ""
  INSTALL_COMMAND    ""
  TEST_COMMAND       ""
  )
